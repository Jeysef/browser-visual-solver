{
  "manifest_version": 3,
  "name": "AI Screen Snipper",
  "version": "2.1",
  "description": "Select screen area and solve with Local AI.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:1234/*",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "toggle-ui": {
      "suggested_key": {
        "default": "Ctrl+Period",
        "mac": "Command+Period"
      },
      "description": "Toggle AI Snipper"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "vibecode-ghost@local.dev",
      "strict_min_version": "109.0"
    }
  }
}